[include]
	path = ~/.gitconfig-local
	path = ~/.opt/awesome-dev-helpers/git_aliases/all
[user]
	name = Mitchell Roe
[alias]
	a = add
	aa = add -A
	b = branch
	ba = branch -a
	cf = clean -f
	cmsg = commit -m
	dc = "!git diff-index --quiet HEAD -- || clear; git --no-pager diff --patch-with-stat --cached"
	f = fetch
	fa = fetch --all
	fap = fetch --all --prune
	loga = log --oneline --decorate --graph --all
	logo = log --oneline --decorate --graph
	m = merge
	p = push
	sm = submodule
	sw = switch
	swc = switch -c
[merge]
	tool = vimdiff
	conflictstyle = diff3
[mergetool]
	prompt = true
[core]
	excludesFile = ~/.gitignore_global
